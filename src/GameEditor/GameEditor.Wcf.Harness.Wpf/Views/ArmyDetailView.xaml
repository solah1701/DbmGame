<UserControl x:Class="GameEditor.Wcf.Harness.Wpf.Views.ArmyDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GameEditor.Wcf.Harness.Wpf.Views">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <ContentControl Name="ArmyIdControl"/>
            <ContentControl Name="ArmyNameControl"/>
            <ContentControl Name="ArmyBookControl"/>
            <ContentControl Name="ArmyListControl"/>
            <ContentControl Name="MinYearControl"/>
            <ContentControl Name="MaxYearControl"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Button Name="Add" Content="Add Unit" Margin="5"></Button>
            <Button Name="Update" Content="Update" Margin="5"></Button>
            <Button Name="Delete" Content="Delete" Margin="5"></Button>
        </StackPanel>
        <ContentControl Name="NotesControl"/>
        <!--<StackPanel Orientation="Horizontal">
            <TextBlock Text="Notes:" Width="50" Margin="5"></TextBlock>
            <TextBox TextWrapping="WrapWithOverflow" Name="Notes" Width="200" Margin="5"></TextBox>
        </StackPanel>-->
    </DockPanel>
</UserControl>
