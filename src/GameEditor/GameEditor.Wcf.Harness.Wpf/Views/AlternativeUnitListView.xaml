<UserControl x:Class="GameEditor.Wcf.Harness.Wpf.Views.AlternativeUnitListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GameEditor.Wcf.Harness.Wpf.Views">
    <DockPanel>
        <Button Name="Add" Content="Add Alt Unit" Width="100" HorizontalAlignment="Left" DockPanel.Dock="Bottom" />
        <ListView Name="AlternativeUnitDefinitions" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header = "Id" DisplayMemberBinding="{Binding Id}" Width="30"/>
                    <GridViewColumn Header = "Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header = "Min" DisplayMemberBinding="{Binding MinValue}" Width="50"/>
                    <GridViewColumn Header = "Max" DisplayMemberBinding="{Binding MaxValue}" Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
